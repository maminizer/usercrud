{% extends "base.html.twig" %}
{% block title %}Connexion
{% endblock %}
{% block body %}
	<h1>Connexion</h1>
	<form action="{{ path('security_login')}}" method="post">
		<div class="form-group">
			<input type="text" placeholder="Adresse mail" class="form-control" required name="_username">
		</div>
		<div class="form-group">
			<input type="password" placeholder="Mot de passe" class="form-control" required name="_password">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Connexion</button>
		</div>
	</form>
{% endblock %}
