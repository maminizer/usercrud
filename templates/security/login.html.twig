{% extends "base.html.twig" %}
{% block title %}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel-login">
				<div class="panel-heading">
					<div class="row mb_20">
						<div class="col-xs-6">
							<a href="{{ path('security_login')}}" class="active" id="login-form-link">
								Login
							</a>
						</div>
						<div class="col-xs-6">
							<a href="{{ path('security_registration')}}">
								Register
							</a>
						</div>
					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<form action="{{ path('security_login')}}" method="post">
								<div class="form-group">
									<input type="text" placeholder="Adresse mail" class="form-control" required name="_username">
								</div>
								<div class="form-group">
									<input type="password" placeholder="Mot de passe" class="form-control" required name="_password">
								</div>
								<div class="form-group">
									<button type="submit" class="btn btn-primary">
										Connexion
									</button>
								</div>
							</form>		
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div></div></div>{% endblock %}
